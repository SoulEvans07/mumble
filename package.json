{
  "name": "mumble",
  "version": "0.1.0",
  "private": true,
  "workspaces": {
    "packages": [
      "design",
      "mobile",
      "desktop",
      "shared/*"
    ],
    "nohoist": [
      "**/expo",
      "**/expo/**"
    ]
  },
  "scripts": {
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint-config-custom": "latest",
    "prettier": "^2.7.1",
    "turbo": "latest",
    "typescript": "4.7.4"
  },
  "resolutions": {
    "@types/react": "17.0.48"
  },
  "packageManager": "yarn@1.22.17"
}
